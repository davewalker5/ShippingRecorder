@model ShippingRecorder.Mvc.Models.AddVesselViewModel

@{
    ViewData["Title"] = "Add Vessel";
}

<div class="container-fluid">
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md">
                <span style="font-size: 1.2rem"><strong>Add Vessel</strong></span>
            </div>
        </div>
        <hr />

        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <div class="row">
                <div class="col-md">
                    <span>@Html.Raw(Model.Message)</span>
                </div>
            </div>
            <br />
        }

        @await Html.PartialAsync("Vessel", Model);
    }
</div>
