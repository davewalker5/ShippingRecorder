@model ShippingRecorder.Mvc.Models.VesselModel

@Html.HiddenFor(m => m.Vessel.Id)

<div class="row">
    <div class="col">
        <strong>@Html.LabelFor(m => m.Vessel.IMO)</strong>
        <div class="input-group">
            @Html.TextBoxFor(m => m.Vessel.IMO, new {
                        @class = "form-control",
                        type = "text",
                        inputmode = "numeric",
                        pattern = "[0-9]*",
                        oninput = "this.value = this.value.replace(/[^0-9]/g, '')"
                    })
        </div>
        <span>@Html.ValidationMessageFor(m => m.Vessel.IMO, "", new { @class = "text-danger" })</span>
    </div>
