@model ShippingRecorder.Mvc.Models.VoyageModel

@Html.AntiForgeryToken()
@Html.HiddenFor(m => m.Id)

<div class="row">
    <div class="col-md">
        <strong>@Html.LabelFor(m => m.Number)</strong>
        <div class="input-group">
            @Html.EditorFor(m => m.Number, new { @class = "form-control" })
        </div>
        <span>@Html.ValidationMessageFor(m => m.Number, "", new { @class = "text-danger" })</span>
    </div>
</div>
<br />

<div class="row">
    <div class="col">
        <strong>@Html.LabelFor(m => m.OperatorId)</strong>
        <div class="input-group">
            @Html.DropDownListFor(m => m.OperatorId, Model.Operators, new { @class = "form-control" })
        </div>
        <span>@Html.ValidationMessageFor(m => m.OperatorId, "", new { @class = "text-danger" })</span>
    </div>
</div>
<br />

<div class="row">
    <div class="col">
        <strong>@Html.LabelFor(m => m.VesselId)</strong>
        <div class="input-group">
            @Html.DropDownListFor(m => m.VesselId, Model.Vessels, new { @class = "form-control" })
        </div>
        <span>@Html.ValidationMessageFor(m => m.VesselId, "", new { @class = "text-danger" })</span>
    </div>
</div>
<br />

<div class="row">
    <div class="col-md">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
</div>